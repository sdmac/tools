# Don't display the copyright page
startup_message off

# tab-completion flash in heading bar
vbell off

# prevent clobbering screen by less, vi, etc.
altscreen on

# allow utf-8 display
setenv LANG en_US.UTF-8
defutf8 on
defbce on

defscrollback 30000

hardstatus on
hardstatus alwayslastline
hardstatus string '%{gk}[ %{G}%H %{g}][ %{B}%` %{g}][%= %{wk}%?%-Lw%?%{=b kR}(%{W}%n %t%?(%u)%?%{=b kR})%{= kw}%?%+Lw%?%?%= %{g}][%{Y}%2`%{g}][%{Y}%1`%{g}][%{G}%D %{B}%Y-%m-%d %{W}%C%a%{g}]'

# remove some key bindings
bind k
bind W
bind ^k
# make them safer
bind 'K' kill
bind 'W' windowlist

backtick 1 60 60 $HOME/bin/get_uptime
backtick 2 60 60 $HOME/bin/get_memutil
backtick 0 30 30 sh -c 'screen -ls | grep --color=no -o "$PPID[^[:space:]]*" | cut -d. -f2'

shell zsh
shelltitle '$ |zsh'

escape z # Instead of Control-a, make the escape/command character be Control-z
autodetach on # Autodetach session on hangup instead of terminating screen completely

term $TERM
